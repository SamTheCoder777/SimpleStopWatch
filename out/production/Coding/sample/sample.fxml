<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<GridPane alignment="center" hgap="10" vgap="10" xmlns="http://javafx.com/javafx/10.0.2-internal" xmlns:fx="http://javafx.com/fxml/1" fx:controller="sample.Controller">
   <children>
      <AnchorPane prefHeight="300.0" prefWidth="500.0">
         <GridPane.margin>
            <Insets />
         </GridPane.margin>
         <children>
            <VBox prefHeight="350.0" prefWidth="500.0">
               <children>
                  <TextField alignment="TOP_CENTER" text="Stopwatch v.1.0" />
                  <TextArea fx:id="stopwatch" prefHeight="186.0" prefWidth="500.0" text="0.00">
                     <font>
                        <Font name="System Bold" size="72.0" />
                     </font>
                  </TextArea>
                  <HBox prefHeight="100.0" prefWidth="200.0">
                     <children>
                        <Button fx:id="start" minHeight="50.0" minWidth="70.0" mnemonicParsing="false" onAction="#startTimer" text="Start">
                           <HBox.margin>
                              <Insets left="125.0" top="10.0" />
                           </HBox.margin>
                        </Button>
                        <Button fx:id="stop" minHeight="50.0" minWidth="70.0" mnemonicParsing="false" onAction="#stopTimer" text="Stop">
                           <HBox.margin>
                              <Insets left="10.0" top="10.0" />
                           </HBox.margin>
                        </Button>
                        <Button fx:id="reset" minHeight="50.0" minWidth="70.0" mnemonicParsing="false" onAction="#resetTimer" text="Reset">
                           <HBox.margin>
                              <Insets left="10.0" top="10.0" />
                           </HBox.margin>
                        </Button>
                     </children>
                  </HBox>
               </children>
            </VBox>
         </children></AnchorPane>
   </children>
   <columnConstraints>
      <ColumnConstraints />
   </columnConstraints>
   <rowConstraints>
      <RowConstraints />
   </rowConstraints>
</GridPane>
